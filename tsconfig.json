{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"],
      "/*": ["./*"],
      "lib/*": ["../lib/*"],
      "ui/*": ["../ui/*"]
    }
  },
  "exclude": ["node_modules"]
}
